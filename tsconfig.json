{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "stories/**/*.ts"]
}
